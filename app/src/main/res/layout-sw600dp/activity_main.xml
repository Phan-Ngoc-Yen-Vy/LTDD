<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/botron_xam"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="220dp"
        android:layout_width="match_parent">

        <TextView
            android:background="#D5D9F3"
            android:layout_height="225dp"
            android:layout_width="match_parent"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            android:textColor="#835C5858"
            android:text="    Karuida®"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/chu"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textColor="#835C5858"
            android:text="                         KK-8827A"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="80dp"
            android:id="@+id/cha"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="24sp"
            android:textColor="#835C5858"
            android:text="                                                           8digit"
            android:layout_marginTop="8dp"
            android:id="@+id/ch"/>

        <TextView
            android:background="@drawable/botron_xanh"
            android:layout_height="95dp"
            android:layout_width="300dp"
            android:layout_marginTop="10dp"
            android:id="@+id/matngoai"
            android:layout_centerInParent="true"
            android:layout_below="@id/chu"
            android:backgroundTint="#494848"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/matngoai"
            android:layout_alignLeft="@+id/matngoai"
            android:layout_marginStart="-50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="#454343" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/matngoai"
            android:layout_alignLeft="@+id/matngoai"
            android:layout_marginStart="-25dp"
            android:layout_marginLeft="89dp"
            android:layout_marginTop="65dp"
            android:layout_marginRight="50dp"
            android:background="#7A7B7D" />

        <EditText
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="60dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="60dp"
            android:id="@+id/edtso"
            android:layout_marginRight="80dp"
            android:cursorVisible="false"
            android:textColorHint="#000"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:hint="0."/>

        <TextView
            android:background="#000"
            android:layout_height="40dp"
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="270dp"
            android:layout_below="@+id/matngoai"/>
    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:weightSum="5">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#FAF6F6"
            android:text="OFF"
            android:backgroundTint="#9A9898"
            android:onClick="ButtonClink"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#FAF6F6"
            android:text="MRC"
            android:backgroundTint="#9A9898"
            android:onClick="ButtonClink"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#FAF6F6"
            android:text="M-"
            android:backgroundTint="#9A9898"
            android:onClick="ButtonClink"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#FAF6F6"
            android:text="M+"
            android:backgroundTint="#9A9898"
            android:onClick="ButtonClink"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="%"
            android:backgroundTint="#9A9898"
            android:onClick="ButtonClink"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="√"
            android:backgroundTint="#9A9898"
            android:onClick="ButtonClink"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="MC"
            android:backgroundTint="#9A9898"
            android:onClick="ButtonClink"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="MR"
            android:backgroundTint="#9A9898"
            android:onClick="ButtonClink"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="÷"
            android:backgroundTint="#9A9898"
            android:onClick="ButtonClink"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1">

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="30dp"
            android:text="+/_"
            android:backgroundTint="#9A9898"
            android:onClick="ButtonClink"
            android:padding="0dp"
            android:layout_weight="1" android:layout_margin="5dp"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:textColor="#000"
            android:text="7"
            android:backgroundTint="#F8F7F7"
            android:onClick="ButtonClink"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:textColor="#000"
            android:text="8"
            android:backgroundTint="#F8F7F7"
            android:onClick="ButtonClink"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:textColor="#000"
            android:text="9"
            android:backgroundTint="#F8F7F7"
            android:onClick="ButtonClink"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:textColor="#FAF8F8"
            android:text="X"
            android:backgroundTint="#9A9898"
            android:onClick="ButtonClink"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1">

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textStyle="bold|italic"
            android:textSize="50dp"
            android:textColor="#FAF8F8"
            android:text="♪"
            android:backgroundTint="#9A9898"
            android:onClick="ButtonClink"
            android:padding="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:textColor="#000"
            android:text="4"
            android:backgroundTint="#F8F7F7"
            android:onClick="ButtonClink"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:textColor="#000"
            android:text="5"
            android:backgroundTint="#F8F7F7"
            android:onClick="ButtonClink"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:textColor="#000"
            android:text="6"
            android:backgroundTint="#F8F7F7"
            android:onClick="ButtonClink"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textColor="#FAF8F8"
            android:text="-"
            android:backgroundTint="#9A9898"
            android:onClick="ButtonClink"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:weightSum="5"
        android:layout_weight="2"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="4">


            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:text="CE"
                    android:id="@+id/CE"
                    android:backgroundTint="#E1A246"
                    android:onClick="ButtonClink"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="50dp"
                    android:textColor="#000"
                    android:text="1"
                    android:id="@+id/btn1"
                    android:backgroundTint="#F8F7F7"
                    android:onClick="ButtonClink"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/CE"/>

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="50dp"
                    android:textColor="#000"
                    android:text="2"
                    android:backgroundTint="#F8F7F7"
                    android:onClick="ButtonClink"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/btn1"/>

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="50dp"
                    android:textColor="#000"
                    android:text="3"
                    android:backgroundTint="#F8F7F7"
                    android:onClick="ButtonClink"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#000"
                    android:text="ON/C"
                    android:backgroundTint="#E1A246"
                    android:onClick="ButtonClink"
                    android:padding="1dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textStyle="normal"
                    android:textSize="50dp"
                    android:textColor="#000"
                    android:text="0"
                    android:backgroundTint="#F8F7F7"
                    android:onClick="ButtonClink"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:textSize="50dp"
                    android:textColor="#000"
                    android:text="."
                    android:backgroundTint="#F8F7F7"
                    android:onClick="ButtonClink"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textAlignment="gravity"/>

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textStyle="normal"
                    android:textSize="50dp"
                    android:textColor="#000"
                    android:text="="
                    android:backgroundTint="#F8F7F7"
                    android:onClick="ButtonClink"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </LinearLayout>

    <Button
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:textSize="60sp"
        android:text="+"
        android:backgroundTint="#9A9898"
        android:onClick="ButtonClink"
        android:layout_weight="1"
        android:layout_margin="5dp"/>

    </LinearLayout>

</LinearLayout>